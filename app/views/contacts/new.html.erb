<br />
<% if notice.present? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<%end %>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      # バリデーションエラーの件数を表示します。
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      # @contact.errorsは@contact。
      # full_messagesは複数のエラーメッセージを表します。
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
    <%= f.label :name%>
  </div>
  <div class="col-md-3 col-sm-12">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  </div>

  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
  <%= f.label :email %>
  </div>
  <div class="col-md-3 col-sm-12">
  <%= f.text_field :email, class: "form-control" %>
  </div>
  </div>

  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
  <%= f.label :content %>
  </div>
  <div class="col-md-3 col-sm-12">
  <%= f.text_field :content, class: "form-control" %>
  </div>
  </div>
  
  <%= f.submit "問い合わせる", class: 'btn btn-default btn' %>
<% end %>