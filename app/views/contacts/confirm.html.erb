<p id="notice"><%= notice %></p>

<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  
  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
  <%= f.label :name %>:
  </div>
  <div class="col-md-3 col-sm-12">
  <%= @contact.name %>
  </div>
  </div>
  
  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
  <%= f.label :email %>:
  </div>
  <div class="col-md-3 col-sm-12">
  <%= @contact.email %>
  </div>
  </div>
  
  <div class="form-group row">
  <div class="col-md-offset-3 col-sm-offset-0 col-md-3 col-sm-12">
  <%= f.label :content %>:
  </div>
  <div class="col-md-3 col-sm-12">
  <%= @contact.content %>
  </div>
  </div>

  <%= f.submit "問い合わせる", class: 'btn btn-default btn' %>
<% end %>

<br />

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%= f.submit "戻る", name:'back', class: 'btn btn-default btn' %>
<% end %>